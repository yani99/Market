@model DetailsAccountViewModel


<div id="account-details">
    <h1 class="text-uppercase">Account details</h1>
    <hr />

    <div class="card account-card">
        <div class="card-title">
            <div class="row">
                <div class="col-9">
                    <h2 class="text-uppercase">Your information</h2>
                </div>

                <div class="col-3">
                    <a id="account-details-edit-link" href="#"><i class="fas fa-edit"></i>Edit</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-4">
                    <label asp-for="@Model.UserName"></label>
                </div>
                <div class="col-8">
                    <span>@Model.UserName</span>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <label asp-for="@Model.FullName"></label>
                </div>
                <div class="col-8">
                    <span>@Model.FullName</span>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <label asp-for="@Model.Email"></label>
                </div>
                <div class="col-8">
                    <span>@Model.Email</span>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <label asp-for="@Model.Phone"></label>
                </div>
                <div class="col-8">
                    <span>@Model.Phone</span>
                </div>
            </div>
        </div>
    </div>

    <div class="card account-card">
        <div class="card-title">
            <div class="row">
                <div class="col-9">
                    <h2 class="text-uppercase">Your Balance</h2>
                </div>
                <div class="col-3">
                    <a href="#"><i class="fas fa-edit"></i>Add</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <span class="balance"><i class="fas fa-euro-sign"></i>0.00</span>
        </div>
    </div>
</div>



<script>
        var editAccountUrl = "@Url.Action("Edit","Account")";

    $("#account-details-edit-link").click(function (e) {
            e.preventDefault();
            $.ajax({
                type: "GET",
                url: editAccountUrl,
                success: function (result) {
                    $("#account-details").html(result);
                }
            })
        })
</script>