@model EditAccountViewModel


<div id="account-edit">
    <h1 class="text-uppercase">Edit Account</h1>
    <hr />
    <form method="post">
        <div asp-validation-summary="All" class="custom-validation-summary"></div>
        <div class="card account-card">
            <div class="card-title">
                <h2 class="text-uppercase">Your information</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="@Model.UserName"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="@Model.UserName" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label asp-for="@Model.FirstName"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="@Model.FirstName" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label asp-for="@Model.LastName"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="@Model.LastName" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label asp-for="@Model.Email"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="@Model.Email" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-4">
                        <label asp-for="@Model.Phone"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="@Model.Phone" />
                    </div>
                </div>
            </div>
        </div>

        <div class="card account-card">
            <div class="card-title">
                <h2 class="text-uppercase">Reset Password</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="@Model.Password"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="password" asp-for="@Model.Password" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label asp-for="@Model.ConfirmPassword"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="password" asp-for="@Model.ConfirmPassword" />
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <button id="submit" type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
    </form>
</div>
