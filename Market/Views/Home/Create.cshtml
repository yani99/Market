@model  Market.ViewModels.CreatePostViewModel;
@{
    ViewData["Title"] = "Create";
}
    <form method="post" asp-action="Create">
        <div class="row justify-content-center">
            <h1>Create a product</h1>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Title">Title</label>
            <input  type="text" class="form-control" id="title" placeholder="Chuk">
        </div>
        <br />
        <div class="form-group row">
            <div class="col-12">
                <input asp-for="@Model.Quantity" class="form-control" type="number" value="1" id="Quantity">
            </div>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea  class="form-control" id="description" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Price" for="price">Price</label>
            <input type="number" class="form-control" id="Price">
        </div>
        <button type="submit" class="btn btn-primary">Create Post</button>
    </form>
