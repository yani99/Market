
@model PaginatedListViewModel
@{
    ViewData["Title"] = "Home Page";
}

    <div class="bg-white-wrapper">
        <div class="row">
            @foreach (var item in Model.Data)
            {
                <div class="col-4">
                    <div class="card m-3">
                        <div class="card-header">
                            <h4 class="card-title">@item.Title</h4>
                        </div>
                        <img class="card-img-top" src="~/images/universalmarket-background.jpg" asp-append-version="true">
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <p class="card-text">@item.Price</p>
                        </div>
                        <div class="card-footer text-center">
                            <a class="btn btn-primary" asp-action="Details" asp-controller="Product" asp-route-id="@item.Id">View</a>
                        </div>
                    </div>
                </div>
            }
